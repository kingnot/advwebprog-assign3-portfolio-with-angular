<% include ../partials/header.ejs %>

<main class="container">
    <h1><%= title %></h1>
    <div class="panel panel-info">
        <div class="panel-heading">
            <a href="/businesscontacts/add" title="Add Business Contact"><i class="fa fa-plus-circle"></i> Add a new Business Contact</a>
        </div> <!-- panel-heading -->
        <% if (businesscontacts.length > 0) { %>
        <div class="panel-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Contact Name</th>
                        <th>Contact Number</th>
                        <th>Email</th>
                    </tr>
                </thead>
                </tbody>
                <% for (var i = 0; i < businesscontacts.length; i++) { %>
                <tr>
                    <td>
                        <%= businesscontacts[i].contactName %>
                    </td>
                    <td>
                        <%= businesscontacts[i].phone %>
                    </td>
                    <td>
                        <%= businesscontacts[i].email %>
                    </td>
                    <td>
                        <a href="/businesscontacts/<%= businesscontacts[i]._id %>" title="Edit" class="btn btn-primary">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a href="/businesscontacts/delete/<%= businesscontacts[i]._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>   
                </tr>
                <% } %>
                </tbody>
            </table>
        </div> <!-- panel-body -->
        <% } %>
    </div><!-- panel panel-default -->

</main>
<% include ../partials/footer.ejs %>
